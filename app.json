{
  "expo": {
    "name": "Penny",
    "slug": "penny",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./public/newicon.png",
    "adaptiveIcon": {
      "foregroundImage": "./public/newicon.png",
      "backgroundColor": "#ffffff"
    },
    "web": {
      "favicon": "./public/newicon.png",
      "meta": {
        "name": "Penny",
        "description": "Track your income and expenses effortlessly with AI-powered insights",
        "themeColor": "#6C63FF"
      }
    },
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2196F3"
    },
    "ios": {
      "bundleIdentifier": "com.penny.app",
      "buildNumber": "1.0.0",
      "supportsTablet": true,
      "infoPlist": {
        "CFBundleDisplayName": "Penny",
        "NSFaceIDUsageDescription": "Allow Penny to use Face ID for secure and quick authentication.",
        "NSPhotoLibraryUsageDescription": "Allow Penny to access your photo library to set your profile picture."
      }
    },
    "android": {
      "package": "com.penny.app",
      "versionCode": 1,
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./public/newicon.png",
        "backgroundColor": "#ffffff"
      },
      "notification": {
        "icon": "./public/newicon.png",
        "color": "#6C63FF"
      }
    },
    "platforms": [
      "ios",
      "android"
    ],
    "extra": {
      "eas": {
        "projectId": "ba58eb76-1d21-434a-9f32-fc8486bf7fca"
      }
    }
  }
}

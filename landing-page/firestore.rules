rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Visitors collection - allow anyone to write (for tracking), only admin to read
    match /visitors/{visitorId} {
      allow create: if true; // Anyone can add visitor tracking
      allow read, update, delete: if request.auth != null; // Only authenticated admin can read
    }

    // Waitlist collection - allow anyone to write, only admin to read
    match /waitlist/{emailId} {
      allow create: if true; // Anyone can signup
      allow read, update, delete: if request.auth != null; // Only authenticated admin can read
    }

    // Landing page visitors - allow anyone to write, only admin to read
    match /landing_visitors/{visitorId} {
      allow create: if true; // Anyone can add visitor tracking
      allow read, update, delete: if request.auth != null; // Only authenticated admin can read
    }

    // Landing page waitlist - allow anyone to write, only admin to read
    match /landing_waitlist/{emailId} {
      allow create: if true; // Anyone can signup
      allow read, update, delete: if request.auth != null; // Only authenticated admin can read
    }

    // Landing page suggestions - allow anyone to write, only admin to read
    match /landing_suggestions/{suggestionId} {
      allow create: if true; // Anyone can submit suggestions
      allow read, update, delete: if request.auth != null; // Only authenticated admin can read
    }

    // Landing page contact messages - allow anyone to write, only admin to read
    match /landing_contact_messages/{messageId} {
      allow create: if true; // Anyone can submit contact messages
      allow read, update, delete: if request.auth != null; // Only authenticated admin can read
    }

    // Landing page blog posts - allow anyone to read published posts, only admin to write
    match /landing_blogs/{blogId} {
      allow read: if true; // Anyone can read blog posts
      allow create, update, delete: if request.auth != null; // Only authenticated admin can manage
    }

    // Admin settings collection - only authenticated users
    match /admin/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

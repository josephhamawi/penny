rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function - user must be authenticated and accessing their own data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // User-scoped data structure
    match /users/{userId} {
      // Expenses collection
      match /expenses/{expenseId} {
        // Allow read/write only if authenticated user owns this data
        allow read, write: if isOwner(userId);
      }

      // Settings collection (budget, webhookUrl)
      match /settings/{settingId} {
        // Allow read/write only if authenticated user owns this data
        allow read, write: if isOwner(userId);
      }

      // Goals collection (for future AI features)
      match /goals/{goalId} {
        // Allow read/write only if authenticated user owns this data
        allow read, write: if isOwner(userId);
      }

      // Personality Reports collection (for future AI features)
      match /personalityReports/{reportId} {
        // Allow read/write only if authenticated user owns this data
        allow read, write: if isOwner(userId);
      }
    }

    // Deny all other paths by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Production-ready security rules for expenses
    match /expenses/{expense} {
      // Allow read if user is authenticated and owns the expense
      allow read: if request.auth != null &&
                  resource.data.userId == request.auth.uid;

      // Allow create if user is authenticated and creating their own expense
      allow create: if request.auth != null &&
                    request.resource.data.userId == request.auth.uid &&
                    request.resource.data.keys().hasAll(['userId', 'date', 'description', 'category', 'inAmount', 'outAmount', 'createdAt']) &&
                    request.resource.data.userId is string &&
                    request.resource.data.description is string &&
                    request.resource.data.category is string &&
                    request.resource.data.inAmount is number &&
                    request.resource.data.outAmount is number &&
                    request.resource.data.inAmount >= 0 &&
                    request.resource.data.outAmount >= 0;

      // Allow update if user is authenticated and owns the expense
      allow update: if request.auth != null &&
                    resource.data.userId == request.auth.uid &&
                    request.resource.data.userId == request.auth.uid;

      // Allow delete if user is authenticated and owns the expense
      allow delete: if request.auth != null &&
                    resource.data.userId == request.auth.uid;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
